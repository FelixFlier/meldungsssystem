# =============================================
# ANWENDUNGSEINSTELLUNGEN
# =============================================
APP_NAME=Meldungssystem
APP_VERSION=1.0.0
DEBUG=True
BASE_URL=http://localhost:8000
ENVIRONMENT=development  # development, testing, production

# =============================================
# DATENBANKEINSTELLUNGEN
# =============================================
# SQLite f端r Entwicklung
DATABASE_URL=sqlite:///./users.db

# PostgreSQL f端r Produktion (auskommentiert)
# DATABASE_URL=postgresql://username:password@localhost:5432/meldungssystem

# =============================================
# SICHERHEITSEINSTELLUNGEN
# =============================================
SECRET_KEY=dein_sehr_komplexer_secret_key_mindestens_32_zeichen_lang
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================
# API-EINSTELLUNGEN
# =============================================
API_HOST=localhost:8000
API_PREFIX=/api
CORS_ORIGINS=["*"]

# =============================================
# AGENTEN-EINSTELLUNGEN
# =============================================
SELENIUM_HEADLESS=False  # True f端r Produktion
SELENIUM_TIMEOUT=300  # Timeout in Sekunden
AGENT_LOG_LEVEL=INFO

# =============================================
# LOG-EINSTELLUNGEN
# =============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# =============================================
# SPEICHEREINSTELLUNGEN
# =============================================
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
MAX_UPLOAD_SIZE=10485760  # 10MB in Bytes

# =============================================
# E-MAIL-EINSTELLUNGEN (f端r Benachrichtigungen)
# =============================================
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=user@example.com
# SMTP_PASSWORD=your_password
# SMTP_FROM_EMAIL=noreply@meldungssystem.de
# SMTP_USE_TLS=True